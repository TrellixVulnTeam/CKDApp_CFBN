<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/main_background_gradient2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Thread_TV_ThreadTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="THREAD TITLE"
                android:textColor="@android:color/black"
                android:layout_margin ="10dp"
                android:textSize="@dimen/text_size_medium"
                android:padding="5dp"
                android:background="@drawable/rounded_corner_textview"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/Thread_TV_ThreadBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corner_textview"
                android:padding="5dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_small"
                tools:text="BODY OF THE THREAD" />

            <TextView
                android:id="@+id/Thread_TV_ThreadAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corner_textview"
                android:padding="5dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_xsmall"
                tools:text="Thread auth"
                android:textStyle="italic"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <Button
                    android:id="@+id/Thread_Btn_Comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:padding="5dp"
                    android:text="Comment"
                    android:textSize="@dimen/text_size_medium" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/Thread_LL_Comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:layout_margin="10dp">

            </LinearLayout>

            <Button
                android:id="@+id/Thread_btn_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_home_background"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="Home"
                android:textSize="@dimen/text_size_medium"/>

        </LinearLayout>
    </ScrollView>



